.pg-layout {
  background: var(--main-background-color);
  color: var(--secondary-contrast-cta-color);
  height: 100%;
  padding-left: 0;
  padding-right: 0;
  /* padding-top: calc(var(--gap) * 1.3); */
  padding-top: 0;

  &--mobile {
    max-width: 100vw;
    min-height: auto;
    min-width: 100vw;
    padding-bottom: 52px;
    padding-top: 0;
    width: 100vw;
  }
}

.trading-layout {
  background: var(--main-background-color);
}
